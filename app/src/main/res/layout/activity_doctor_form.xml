<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#e6e6e6"
    android:fillViewport="true"
    tools:context=".DoctorForm">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="@string/doctor_registration"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/registerDoctor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.053" />

        <CheckBox
            android:id="@+id/internalMedicine"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:fontFamily="serif"
            android:text="@string/internal_medicine"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/familyMedicine"
            app:layout_constraintEnd_toStartOf="@+id/obstetrics"
            app:layout_constraintHorizontal_bias="0.563"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/special"
            app:layout_constraintVertical_bias="0.554" />

        <CheckBox
            android:id="@+id/gynecology"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:layout_marginEnd="3dp"
            android:fontFamily="serif"
            android:text="@string/gynecology"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/neurology"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.978"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.945" />

        <CheckBox
            android:id="@+id/neurology"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:fontFamily="serif"
            android:text="@string/neurology"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/registerDoctor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.963"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/special"
            app:layout_constraintVertical_bias="0.824" />

        <CheckBox
            android:id="@+id/pediatrics"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:fontFamily="serif"
            android:text="@string/pediatrics"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/registerDoctor"
            app:layout_constraintEnd_toStartOf="@+id/neurology"
            app:layout_constraintHorizontal_bias="0.594"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/special"
            app:layout_constraintVertical_bias="0.824" />

        <CheckBox
            android:id="@+id/obstetrics"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:fontFamily="serif"
            android:text="@string/obstetrics"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/gynecology"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.966"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/special"
            app:layout_constraintVertical_bias="0.551" />

        <CheckBox
            android:id="@+id/familyMedicine"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:fontFamily="serif"
            android:text="@string/family_medicine"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/pediatrics"
            app:layout_constraintEnd_toStartOf="@+id/gynecology"
            app:layout_constraintHorizontal_bias="0.552"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/special"
            app:layout_constraintVertical_bias="0.796" />

        <EditText
            android:id="@+id/employeeNumber"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="@string/employee_number"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/special"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleForm"
            app:layout_constraintVertical_bias="0.854" />

        <TextView
            android:id="@+id/special"
            android:layout_width="245dp"
            android:layout_height="37dp"
            android:fontFamily="serif"
            android:text="@string/specialties"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/registerDoctor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.479"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleForm"
            app:layout_constraintVertical_bias="0.526" />

        <EditText
            android:id="@+id/address"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="@string/address"
            android:inputType="textPostalAddress"
            android:textAlignment="center"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/employeeNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.932"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleForm"
            app:layout_constraintVertical_bias="0.929" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:textAlignment="center"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/firstName"
            app:layout_constraintEnd_toStartOf="@+id/lastName"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleForm"
            app:layout_constraintVertical_bias="0.671" />

        <EditText
            android:id="@+id/firstName"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:layout_marginStart="3dp"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="@string/first_name"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintEnd_toStartOf="@+id/lastName"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleForm"
            app:layout_constraintVertical_bias="0.87" />

        <EditText
            android:id="@+id/email"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:layout_marginStart="3dp"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/employeeNumber"
            app:layout_constraintEnd_toStartOf="@+id/address"
            app:layout_constraintHorizontal_bias="0.355"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleForm"
            app:layout_constraintVertical_bias="0.929" />

        <EditText
            android:id="@+id/lastName"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="@string/last_name"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.932"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleForm"
            app:layout_constraintVertical_bias="0.685" />

        <Button
            android:id="@+id/registerDoctor"
            android:layout_width="154dp"
            android:layout_height="57dp"
            android:layout_marginTop="772dp"
            android:backgroundTint="#1fe0ff"
            android:fontFamily="serif"
            android:text="@string/register"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            app:icon="@android:drawable/ic_menu_send"
            app:iconTint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/password"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.932"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleForm"
            app:layout_constraintVertical_bias="0.866" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>